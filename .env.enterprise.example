# OpenHands Enterprise Environment Configuration
# Copy this file to .env and modify as needed

######################################
# Telemetry Control (DISABLED BY DEFAULT)
######################################
# PostHog Analytics - Set to 'true' to enable your own analytics tracking
ENABLE_POSTHOG_TELEMETRY=false

# External Monitoring Packages - Set to 'true' to install ddtrace, posthog packages
ENABLE_EXTERNAL_TELEMETRY=false

# Prometheus Metrics Collection - Set to 'true' to enable metrics endpoint
ENABLE_PROMETHEUS_METRICS=false

# Datadog Monitoring - Set to 'true' to enable Datadog labels
ENABLE_DATADOG_TELEMETRY=false

# Telemetry Infrastructure - Set to 'true' to enable telemetry database tables
ENABLE_TELEMETRY_INFRASTRUCTURE=false

######################################
# Required for Enterprise Features
######################################
# GitHub App Configuration (Required for OAuth)
GITHUB_APP_CLIENT_ID=""
GITHUB_APP_WEBHOOK_SECRET=""
GITHUB_APP_PRIVATE_KEY=""

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/openhands_enterprise"

# PostHog (Only required if ENABLE_POSTHOG_TELEMETRY=true)
# POSTHOG_CLIENT_KEY="your-posthog-key"

######################################
# Optional Enterprise Features
######################################
# Billing Integration
ENABLE_BILLING=false
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Jira Integration
ENABLE_JIRA=false
JIRA_CLIENT_ID=""
JIRA_CLIENT_SECRET=""

# Jira Data Center Integration
ENABLE_JIRA_DC=false

# Linear Integration
ENABLE_LINEAR=false

# GitLab Integration
GITLAB_APP_CLIENT_ID=""
GITLAB_APP_CLIENT_SECRET=""

# Bitbucket Integration
BITBUCKET_APP_CLIENT_ID=""
BITBUCKET_APP_CLIENT_SECRET=""

# Enterprise SSO
ENABLE_ENTERPRISE_SSO=false

######################################
# Server Configuration
######################################
# Frontend Directory
FRONTEND_DIRECTORY="./frontend/build"

# Maintenance Window (Optional)
# MAINTENANCE_START_TIME="2025-07-29T14:18:01.219616-04:00"

# Authentication URL (Optional)
# AUTH_URL="https://your-auth-server.com"

######################################
# ZAI Code Plan Integration
######################################
# ZAI Configuration - Set these to use ZAI Code Plan
LLM_MODEL="zai-code-planner"
LLM_API_KEY="your-zai-api-key-here"
LLM_BASE_URL="https://api.zai-code.com/v1"
LLM_CUSTOM_LLM_PROVIDER="zai"

# ZAI Model Settings
LLM_TEMPERATURE="0.1"
LLM_MAX_INPUT_TOKENS="128000"
LLM_MAX_OUTPUT_TOKENS="4096"

######################################
# Development Settings
######################################
# Hide LLM Settings from UI
HIDE_LLM_SETTINGS=false

# Feature Environment Detection
IS_FEATURE_ENV=false

######################################
# Debug and Logging
######################################
# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL="INFO"

# Enable debug mode
DEBUG=false

# Log format (json, text)
LOG_FORMAT="json"